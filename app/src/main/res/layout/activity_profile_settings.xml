<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/background_rec">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/pikachu" />
            <TextView
                android:id="@+id/usernameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Username..."
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                app:drawableStartCompat="@drawable/at_symbol_white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_rec" />

            <Button
                android:id="@+id/profileBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/backbutton"
                android:minWidth="250dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="50dp"
                android:paddingBottom="10dp"
                android:text="Back to \nHome"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_arrow_back_24" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:text="Account Info"/>
            <TextView
                android:id="@+id/nameFieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:text="Username"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_person_outline_24" />
            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/emailFieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:text="Email"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_email_24" />

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/phoneFieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:text="Mobile"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_phone_android_24" />

            <EditText
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="phone" />
        </LinearLayout>
        <Button
            android:id="@+id/saveButton"
            android:background="@drawable/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"/>

    </LinearLayout>
</ScrollView>


